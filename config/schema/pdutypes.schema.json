{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hakoniwa PDU Types (Compact)",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["channel_id", "pdu_size", "name", "type"],
    "properties": {
      "channel_id": {
        "type": "integer",
        "minimum": 0,
        "description": "PDU channel ID"
      },
      "pdu_size": {
        "type": "integer",
        "minimum": 1,
        "description": "PDU size in bytes"
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "PDU name (org_name equivalent)"
      },
      "type": {
        "type": "string",
        "minLength": 1,
        "description": "ROS message type"
      }
    }
  }
}
