{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cache Configuration",
  "description": "Schema for cache endpoint configurations (e.g., latest, queue).",
  "type": "object",
  "required": ["type", "name", "store"],

  "properties": {
    "type": {
      "type": "string",
      "enum": ["buffer"],
      "description": "Endpoint type (fixed to 'buffer')."
    },

    "name": {
      "type": "string",
      "description": "Name of the cache endpoint.",
      "minLength": 1,
      "maxLength": 256,
      "examples": ["vehicle_state_buffer", "collision_event_queue"]
    },

    "store": {
      "type": "object",
      "description": "Buffer storage settings.",
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["latest", "queue"],
          "description": "Storage mode ('latest' for state, 'queue' for events)."
        },

        "depth": {
          "type": "integer",
          "description": "Queue depth (required if mode is 'queue').",
          "minimum": 1,
          "maximum": 1024,
          "default": 1
        }
      },

      "allOf": [
        {
          "if": {
            "properties": { "mode": { "const": "queue" } }
          },
          "then": {
            "required": ["depth"]
          }
        }
      ]
    }
  }
}
