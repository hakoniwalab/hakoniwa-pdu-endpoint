@PACKAGE_INIT@

if(POLICY CMP0167)
  cmake_policy(SET CMP0167 NEW)
endif()

include(CMakeFindDependencyMacro)

find_dependency(Boost 1.70)
find_package(nlohmann_json 3.11.3 CONFIG QUIET)

if(NOT TARGET nlohmann_json::nlohmann_json)
  set(_hakoniwa_bundled_nlohmann "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_INCLUDEDIR@/nlohmann/json.hpp")
  if(EXISTS "${_hakoniwa_bundled_nlohmann}")
    add_library(nlohmann_json::nlohmann_json INTERFACE IMPORTED)
    set_target_properties(nlohmann_json::nlohmann_json PROPERTIES
      INTERFACE_INCLUDE_DIRECTORIES "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_INCLUDEDIR@"
    )
  else()
    message(FATAL_ERROR "nlohmann_json (>=3.11.3) not found. Install it or reinstall hakoniwa_pdu_endpoint with bundled headers.")
  endif()
endif()

include("${CMAKE_CURRENT_LIST_DIR}/hakoniwa_pdu_endpointTargets.cmake")
